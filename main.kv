MainWidget:

<MainWidget>:
    Slider:
        id:slide
        min:0
        max:200
        value:50
        multiline:False
        height:200
        orientation:"vertical"
        pos:(200, 100)

    Switch:
        pos:(0,150)
        text:"Toggle Button"

    Label:
        text:"Je suis un label"
        pos:(200,0)
        color:"lime"
        font_size:30

    ProgressBar:
        min:0
        max:200
        width:200
        pos:(225, 50)
        value: slide.value

    Label:
        text : str(50)   
        pos: (300, 150) 
        font_size: 60